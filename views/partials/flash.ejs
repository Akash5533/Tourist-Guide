<% if(success && success.length) {%>

    <div class="alert alert-success alert-dismissible fade show py-3" role="alert" id="nothing">
        <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

    <% if(error && error.length) {%>

        <div class="alert alert-danger alert-dismissible fade show py-3" role="alert" id="nothing">
            <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>
               